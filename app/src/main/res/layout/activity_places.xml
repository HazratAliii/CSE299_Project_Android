<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Places">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/coxsbazar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/cox"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/kuakata"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/coxsbazar"
            android:src="@drawable/kuakata"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/sundarban"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/kuakata"
            android:src="@drawable/sundarbans"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/rangamati"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/sundarban"
            android:src="@drawable/rangamati"
            android:scaleType="fitXY"/>
    </RelativeLayout>


</ScrollView>